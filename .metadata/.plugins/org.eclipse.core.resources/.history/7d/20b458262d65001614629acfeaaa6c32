	public String load(){
		FileReader fr;
		BufferedReader br;
		String pl = null;
		try {
			fr = new FileReader("src/MapSource/player.txt");
			br = new BufferedReader(fr);
			try {
				pl = br.readLine();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return pl ;
