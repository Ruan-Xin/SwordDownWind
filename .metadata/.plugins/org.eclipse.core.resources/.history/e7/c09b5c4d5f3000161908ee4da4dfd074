package dialogPackage;


import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;
import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;

import PersonAll.PersonAll;
import basePackage.LenthAll;
import basePackage.MyDialog;

public class fightDialog extends JDialog{
	JPanel jp1;
	JButton attack = new JButton("攻击");
	JButton defence = new JButton("使用道具");
	JButton Skill = new JButton("使用技能");
	JButton leave = new JButton("逃跑");
	public fightDialog(PersonAll player,PersonAll boss) {
		// TODO Auto-generated constructor stub
		jp1 = new JPanel();
		GridLayout gl = new GridLayout(2, 2);
		jp1.setLayout(gl);
		jp1.add(attack);
		jp1.add(defence);
		jp1.add(Skill);
		jp1.add(leave);
		attack.addActionListener(new ActionListener() {			
			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				setVisible(false);
				if(player.getnowHP() > 0 && boss.getnowHP() > 0){
					int playerRealAttack = player.getBaseAttack() + (int)(Math.random()*player.getBaseAttack()*0.1);
					int bossRealAttack = boss.getBaseAttack() + (int)(Math.random()*player.getBaseAttack()*0.1);
					if(player.getPriority() > boss.getPriority()){
						boss.subHP(playerRealAttack);
						MyDialog.showMessageDialog(player.getname() + "对"+ boss.getname() + "造成了" + playerRealAttack , "战斗信息", LenthAll.TALK_DIALOG_WIDTH, LenthAll.TALK_DIALOG_HEIGHT);
					}
					else{
						player.subHP(bossRealAttack);
						MyDialog.showMessageDialog(boss.getname() + "对"+ player.getname() + "造成了" + bossRealAttack , "战斗信息", LenthAll.TALK_DIALOG_WIDTH, LenthAll.TALK_DIALOG_HEIGHT);
					}
				}
			}
		});
		this.add(jp1); 
		this.setBounds(450, 500, LenthAll.TALK_DIALOG_WIDTH, LenthAll.TALK_DIALOG_HEIGHT);
		this.setVisible(true);
	}
}
